@using JobBoard.Models;

<!DOCTYPE html>
<head>
  <title>Job Board</title>
</head>
<body>
  <h4>Current Job Openings:</h4>
  @if (Model.Count == 0)
  {
    <p>No current jobs.</p>
  }
  else
  {
    foreach (JobOpening job in Model)
    {
      <p>Job Title: @job.Title</p>
      <p>Description: @job.Description</p>
      <p>Contact: @job.JobContact.Name Email: @job.JobContact.Email Phone: @job.JobContact.PhoneNumber</p>
    }
  }
  <a href="/addjob">Add a job posting.</a>
</body>